<h1>Welcome to Twixter!</h1>

<% @twixts.each do |twixt| %>
    <div class="link row clearfix">
      <h2>
        <%=  twixt.content %><br>
        <small class="author">Submitted <%= time_ago_in_words(twixt.created_at) %> ago by <%= twixt.user.name %></small>
      </h2>
			<p><%= link_to 'User Profile', user_profile_path(twixt.user.id), class: "btn btn-small btn-primary"
			%></p>
    </div>

<% end %>

<div class="link row clearfix"
<%= paginate @twixts %>
</div>
